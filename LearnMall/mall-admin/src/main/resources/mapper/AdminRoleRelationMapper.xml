<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mall.admin.mapper.AdminRoleRelationMapper">
    <insert id="insertList">
        insert into admin_role_relation (admin_id, role_id) values
        <foreach collection="list" separator="," item="item" index="index">
            (#{item.adminId,jdbcType=BIGINT}, #{item.roleId,jdbcType=BIGINT})
        </foreach>

    </insert>

    <select id="getRoleList" resultType="com.example.mall.admin.model.Role">
        select r.*
        from admin_role_relation ar
                 left join role r on ar.role_id = r.id
        where ar.admin_id = #{adminId}
    </select>
</mapper>